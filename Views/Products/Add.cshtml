@model Product_Control.Dto.ProductDto

@{
    ViewData["Title"] = "Add New Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-4">
    <h2 class="text-center mb-4 display-4 font-weight-bold">Add New Product</h2>

    <form asp-controller="Product" asp-action="AddConfirmed" method="post" class="shadow-lg p-4 bg-light rounded animate__animated animate__fadeInUp" enctype="multipart/form-data">
        <div class="form-group mb-3">
            <label for="Title" class="font-weight-bold">Title</label>
            <input asp-for="Title" class="form-control form-control-lg" id="Title" required />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label for="Description" class="font-weight-bold">Description</label>
            <textarea asp-for="Description" class="form-control form-control-lg" id="Description" rows="4" required></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label for="Price" class="font-weight-bold">Price</label>
            <input asp-for="Price" type="number" class="form-control form-control-lg" id="Price" step="0.01" required />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label for="ImageUrl" class="font-weight-bold">Image URL</label>
            <input asp-for="ImageUrl" type="text" class="form-control form-control-lg" id="ImageUrl"  />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label for="Category" class="font-weight-bold">Category</label>
            <select asp-for="Category" class="form-control form-control-lg" id="Category">
                <option value="Accessories">Accessories</option>
                <option value="Laptops">Laptops</option>
                <option value="Mobiles">Mobiles</option>
                <option value="Cameras">Cameras</option>

                <option value="Other">Other</option>
            </select>
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary btn-lg">Add Product</button>
    </form>
</div>
