        <!-- Pagination and Items per Page -->
<div class="d-flex justify-content-between mt-4">
    <!-- Dropdown for selecting page size -->
    <div>
        <label for="pageSize">Items per page:</label>
        <select id="pageSize" class="form-select" onchange="window.location.href=this.value;">
            @foreach (var size in new[] { 3, 6, 9, 12, 15 })
            {
                <option value="@Url.Action("Index", "Home", new { page = 1, pageSize = size })"
                        selected="@(Model.PageSize == size ? "selected" : null)">
                    @size
                </option>
            }
        </select>
    </div>

    <!-- Pagination Links -->
    <div>
        @if (Model.CurrentPage > 1)
        {
            <a href="@Url.Action("Index", "Home", new { page = Model.CurrentPage - 1, pageSize = Model.PageSize })" class="btn btn-primary mx-2">Previous</a>
        }
        @for (var i = 1; i <= Model.TotalPages; i++)
        {
            <a href="@Url.Action("Index", "Home", new { page = i, pageSize = Model.PageSize })" class="btn @(i == Model.CurrentPage ? "btn-info" : "btn-secondary") mx-1">@i</a>
        }
        @if (Model.CurrentPage < Model.TotalPages)
        {
            <a href="@Url.Action("Index", "Home", new { page = Model.CurrentPage + 1, pageSize = Model.PageSize })" class="btn btn-primary mx-2">Next</a>
        }
    </div>
</div>
