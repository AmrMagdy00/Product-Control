@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    if (User.Identity.IsAuthenticated)
    {
        // إذا كان مسجلاً دخوله، يتم توجيهه إلى الصفحة الرئيسية
        Response.Redirect("/Index");
    }
}

<!-- Header Section -->
<h1 class="text-center my-4 display-4 font-weight-bold text-white animate__animated animate__fadeInDown animate__delay-1s"
    style="background: linear-gradient(to right, black, red); padding: 20px; border-radius: 10px; animation: pop 1s ease-in-out;">
    Welcome Back
</h1>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg" style="border-radius: 15px; overflow: hidden; animation: fadeInCard 1.5s ease-in-out;">
                <div class="card-header text-center bg-dark text-white">
                    <h3 class="animate__animated animate__fadeIn animate__delay-1s">Login</h3>
                </div>
                <div class="card-body p-4" style="background: #333;">
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <!-- Email Field -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="text-black">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <!-- Password Field -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" placeholder="password" />
                            <label asp-for="Input.Password" class="text-black">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <!-- Remember Me -->
                        <div class="form-check mb-3">
                            <input asp-for="Input.RememberMe" class="form-check-input" />
                            <label asp-for="Input.RememberMe" class="form-check-label text-white">Remember Me</label>
                        </div>

                        <!-- Submit Button -->
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-danger btn-gradient">
                            <i class="fas fa-sign-in-alt"></i> Log in
                        </button>
                    </form>
                </div>
                <div class="card-footer text-center bg-dark">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword" class="text-danger">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-white">Register as a new user</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-secondary">Resend email confirmation</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Additional CSS -->
<style>
    body {
        background: linear-gradient(to bottom right, white, black) color: #fff;
    }

    .card {
        transition: transform 0.5s ease;
    }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0px 4px 20px rgba(0, 0, 0, 0.3);
        }

    .btn-danger {
        background: linear-gradient(to left, #e63946, #b8322c);
        border: none;
        box-shadow: 0px 4px 15px rgba(255, 65, 108, 0.3);
        transition: transform 0.3s ease-in-out;
    }

        .btn-danger:hover {
            background: linear-gradient(to right, #e63946, #b8322c);
            transform: scale(1.05);
            box-shadow: 0px 6px 20px rgba(255, 65, 108, 0.4);
        }

    .bg-dark {
        background-color: #000 !important;
    }

    .card-header {
        background: #1c1c1c;
        animation: fadeInHeader 1.5s ease-in-out;
    }

    .animate__fadeInDown {
        animation: fadeInDown 1s ease-in-out;
    }

    /* Form background color */
    .card-body {
        background-color: #333;
    }

    @@-webkit-keyframes fadeInCard {
        0%

    {
        opacity: 0;
        transform: translateY(20px);
    }

    100% {
        opacity: 1;
        transform: translateY(0);
    }

    }

    @@-webkit-keyframes fadeInHeader {
        0%

    {
        opacity: 0;
        transform: translateY(-20px);
    }

    100% {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
